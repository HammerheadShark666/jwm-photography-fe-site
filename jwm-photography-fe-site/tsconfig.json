{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "outDir": "dist",             // ✔️ Sends compiled JS to a separate folder
    "rootDir": "src",             // ✔️ Tells TypeScript where your TS/TSX files live
    "noEmit": true,               // Optional if you're using a bundler like Vite or CRA
  },    
  "include": ["src"]
}